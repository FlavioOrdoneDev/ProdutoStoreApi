@model ProdutoStoreApi.AplicacaoServico.AppModels.ProdutoViewModel

@{
    ViewData["Title"] = "Editar";
}

<h1>Editar</h1>

<h4>Produto</h4>
<hr />
@if (Model.ResultadoValidacao != null)
{
    <div class="div-erro">
        @foreach (var item in Model.ResultadoValidacao.Errors)
        {
            <p class="error-message">@item</p>
        }
    </div>
}
<div class="row">
    <div class="col-md-6">
        <form asp-action="Editar">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Perecivel" /> @Html.DisplayNameFor(model => model.Perecivel)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="CategoriaId" class="control-label">Categorias</label>
                <div class="form-group">
                    <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.IdCategoria">
                        <option value="">Selecione uma Categoria</option>
                    </select>                    
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
